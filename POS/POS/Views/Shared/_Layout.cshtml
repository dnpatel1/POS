<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>POS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/AdminStyles.css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @if (Session["useremail"] == (null))
                {
                    @Html.ActionLink("POS", "", "", new { area = "" }, new { @class = "navbar-brand" })
                }
                else if (Session["isAdmin"] != null)
                {
                    @Html.ActionLink("POS", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                   
                }
            </div>
            <!-- Add a if statment here to display the nav-items olny to the Admin -->
            <div class="navbar-collapse collapse">

                @if (Session["isAdmin"] != null)
                {

                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Users", "Index", "Users")</li>
                        <li>@Html.ActionLink("Products", "Index", "Products")</li>
                        <li>@Html.ActionLink("Transactions", "Index", "Transactions")</li>
                    </ul>
                }

                @if (@Session["username"] != null)
                {
                    
                    <ul class="nav navbar-nav pull-right">
                        <li><a href="#">Hi&nbsp;@Session["username"]</a></li>
                        <li>@Html.ActionLink("Logout", "Logout", "Users")</li>
                    </ul>
                    

                }

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Developed by Deep and  Sarthak</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
